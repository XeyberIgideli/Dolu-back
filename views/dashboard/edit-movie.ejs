<%- include('header') %>
        <!-- Menu -->

        <%- include('sidebar') %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <%- include('navbar') %>
         
          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Movies/</span> Edit Movie</h4>

            <!-- Basic Layout & Basic with Icons -->
            <div class="row">
              <!-- Basic Layout -->
              <div class="col-xxl">
                <div class="card mb-4">
                  <div class="card-header d-flex align-items-center justify-content-between">
                    <!-- <h5 class="mb-0">Basic Layout</h5>
                    <small class="text-muted float-end">Default label</small> -->
                  </div>
                  <div class="card-body">
                    <form id="myForm" action="../movie-editted" method="POST" enctype="multipart/form-data"> 
                      <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Landscape image</label>
                            <div class="col-sm-10">
                                <input value="<%= movie.landscapeImage %>" type="file" name="landscapeImage" class="form-control" id="inputGroupFile02" />
                            </div>
                      </div>  

                      <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Portrait image</label>
                            <div class="col-sm-10">
                                <input type="file" value="<%= movie.portraitImage %>" name="portraitImage" class="form-control" id="inputGroupFile02" />
                            </div>
                      </div>
                       
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Title</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" name="title"  id="basic-default-name" value="<%= movie.title %>" />
                        </div>
                      </div>
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-company">Description</label>
                        <div class="col-sm-10">
                            <textarea class="form-control"  name="description" id="exampleFormControlTextarea1" rows="3"><%= movie.description %></textarea>
                        </div>
                      </div>
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-email">Sub Title</label>
                        <div class="col-sm-10">
                          <div class="input-group input-group-merge">
                            <input
                              type="text"
                              id="basic-default-email"
                              name="subTitle"
                              class="form-control"
                              value="<%= movie.subTitle %>"
                              aria-label="john.doe"
                              aria-describedby="basic-default-email2"
                            />
                            <span class="input-group-text" id="basic-default-email2">optional</span>
                          </div> 
                        </div>
                      </div>
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-phone">Media Type</label>
                        <div class="col-sm-10">
                            <select id="defaultSelect" name="mediaType" class="form-select">
                                <option <%= movie.mediaType === 'Movies' ? 'selected' : null %> >Movie</option>
                                <option <%= movie.mediaType === 'Documentary' ? 'selected' : null %> value="1">Documentary</option>
                                <option <%= movie.mediaType === 'Animation' ? 'selected' : null %> value="2">Animation</option>
                              </select>
                        </div>
                      </div>
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Duration</label>
                        <div class="col-sm-10">
                          <input type="text" name="duration" class="form-control" id="basic-default-name" value="<%= movie.duration %>" />
                        </div>
                      </div>
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Release Country</label>
                        <div class="col-sm-10">
                          <input type="text" name="releaseCountry" class="form-control" id="basic-default-name" value="<%= movie.releaseCountry %>" />
                        </div>
                      </div>
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Production</label>
                        <div class="col-sm-10">
                          <input type="text" name="production" class="form-control" id="basic-default-name" value="<%= movie.production %>" />
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Genres</label>
                        <div class="col-sm-10">
                            <div class="tag-wrapper">
                                <div class="tag-container">
                                    <input type="text" name="genres[]" value="<%= movie.genres %>"/>
                                </div>
                            
                                <div class="icons">
                                    <i class="bx bx-copy" id="copy"></i>
                                    <i class="bx bx-window-close" id="removeAll"></i>
                                </div>
                            </div>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Director</label>
                        <div class="col-sm-10">
                          <input type="text" name="director" class="form-control" id="basic-default-name" value="<%= movie.director %>" />
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Release Date</label>
                        <div class="col-sm-10">
                          <input type="text" name="releaseDate" class="form-control" id="basic-default-name" value="<%= movie.releaseDate %>" />
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Rating</label>
                        <div class="col-sm-10">
                          <input type="text" name="rating" class="form-control" id="basic-default-name" value="<%= movie.rating %>" />
                        </div>
                      </div>
                      
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Embed</label>
                        <div class="col-sm-10">
                          <input type="text" name="embed" class="form-control" id="basic-default-name" value="<%= movie.embed %>" />
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Guidance Rate</label>
                        <div class="col-sm-10">
                          <input type="text" name="guidance" class="form-control" id="basic-default-name" value="<%= movie.guidance %>" />
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Language</label>
                        <div class="col-sm-10">
                          <input type="text" name="language" class="form-control" id="basic-default-name" value="<%= movie.language %>" />
                        </div>
                      </div>
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Trailer Link</label>
                        <div class="col-sm-10">
                          <input type="text" name="trailer" class="form-control" id="basic-default-name" value="<%= movie.trailer %>" />
                        </div>
                      </div>

                      <div class="row justify-content-end">
                        <div class="col-sm-10">
                          <button type="submit" id="edit" class="btn btn-primary">Edit</button>
                        </div>
                      </div>

                    </form>
                  </div>
                </div>
              </div>
              
            </div>
          </div>
          <!-- / Content -->

            <!-- Footer -->
<%- include('footer') %>
