<%- include('header') %>
        <!-- Menu -->

        <%- include('sidebar') %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <%- include('navbar') %>
         
          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">TV Shows</span></h4>
              <!-- Hoverable Table rows -->
              <div class="card">

                <div style="display: flex;flex-direction: row; justify-content: space-between;">
                    <h5 class="card-header">Episodes for <strong><%= showTitle %></strong></h5>
                    <a href="../add-new-episode/<%= showID %>" style="align-self: center;margin-right: 1.5rem;" class="btn btn-primary">Add New</a>  
                </div>
                 
                <div class="text-nowrap" style="display: flex;flex-direction: column;gap: 2rem;">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Title</th>
                        <th>Show</th>
                        <th>Season</th>
                        <th>Episode</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      <% if (episodeData.length > 0) { %>
                        <% for( let i = 0; i < episodeData.length; i++ ) { %>
                          <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong><%= episodeData[i].title %></strong></td>
                            <td><%= episodeData[i].show.title %></td>
                            <td>
                              <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li
                                  data-bs-toggle="tooltip"
                                  data-popup="tooltip-custom"
                                  data-bs-placement="top"
                                  class="avatar avatar-xs pull-up" 
                                  style="text-align: center;line-height: 1.7;"
                                >
                                  <%= episodeData[i].season %>
                                </li>  
                              </ul>
                            </td>
                            <td><span class="badge bg-label-primary me-1"> <%= episodeData[i].season %></span></td>
                            <td>
                              <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                  <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                  <a class="dropdown-item" href="edit-episode/<%= episodeData[i].id %>"
                                    ><i class="bx bx-edit-alt me-1"></i> Edit</a
                                  > 
                                  <a class="dropdown-item" href="delete-episode/<%= episodeData[i].id %>"
                                    ><i class="bx bx-trash me-1"></i> Delete</a
                                  >
                                </div>
                              </div>
                            </td>
                          </tr> 
                         <% } %>
                      <% } else {%>
                        <p style="padding-left: 1.5rem;" class="text-warning">No episodes have been added to this show yet.</p>
                      <% } %>
                    </tbody>
                  </table>
                  <div style="align-self: center;">
                    <nav aria-label="Page navigation">
                     <% if (totalPage > 0) { %>
                      <ul class="pagination">
                        <li class="page-item first">
                          <a class="page-link" href="/dashboard/tv-shows/?page=1"><i class="tf-icon bx bx-chevrons-left"></i></a>
                        </li>
                        <% if (currentPage > 1) { %>
                        <li class="page-item prev">
                          <a class="page-link" href="/dashboard/tv-shows/?page=<%= Number(currentPage) - 1 %>"><i class="tf-icon bx bx-chevron-left"></i></a>
                        </li>
                        <% } %>

                       <% for( let i = 1; i <= Number(totalPage); i++ ) { %>
                          <% if (i == currentPage) { %>
                            <li class="page-item active">
                              <a class="page-link" href="/dashboard/tv-shows/?page=<%= i%>"><%= i %></a>
                            </li>
                          <% } else {%>
                            <li class="page-item">
                              <a class="page-link" href="/dashboard/tv-shows/?page=<%= i %>"><%= i %></a>
                            </li>
                          <% } %>
                       <% } %>
                        
                        <% if (currentPage < totalPage) { %>
                          <li class="page-item next">
                            <a class="page-link" href="/dashboard/tv-shows/?page=<%= Number(currentPage) + 1 %>"><i class="tf-icon bx bx-chevron-right"></i></a>
                          </li>
                        <% } %>
                        <li class="page-item last">
                          <a class="page-link" href="/dashboard/tv-shows/?page=<%= totalPage %>"><i class="tf-icon bx bx-chevrons-right"></i></a>
                        </li>
                      </ul>
                     <% } %>
                    </nav>
                  </div>
                </div>
                
              </div>
              <!--/ Hoverable Table rows -->
            </div>
            <!-- / Content -->

            <!-- Footer -->
<%- include('footer') %>
