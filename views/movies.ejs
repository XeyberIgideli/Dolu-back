                                    <div class="card-box">
                                        <img src="<%= movies[k].portraitImage %>" class="card-box-img" alt="">
                                        <div class="box-content">
                                            <% bookmarks.filter(item => { %>
                                                <% if ((item.title === movies[k].title)) { %>
                                                    <i class="bx bx-time card-bookmark"></i>
                                                <% } %>
                                            <% }) %>
