<%- include('header') %>
        <!-- Menu -->

        <%- include('sidebar') %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <%- include('navbar') %>
         
          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">TV Shows</span></h4>
              <!-- Hoverable Table rows -->
              <div class="card">
                <div style="display: flex;flex-direction: row; justify-content: space-between;">
                    <h5 class="card-header">Show list</h5>
                    <a href="tv-shows/add-new-show" style="align-self: center;margin-right: 1.5rem;" class="btn btn-primary">Add New</a>  
                </div>

                <div class="table-responsive text-nowrap">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Servers</th>
                        <th>Mode</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      <% for( let i = 0; i < shows.length; i++ ) { %>
                        <tr>
                          <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong><%= shows[i].title %></strong></td>
                          <td><%= shows[i].genres %></td>
                          <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                              <li
                                data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up" 
                                style="text-align: center;line-height: 1.7;"
                              >
                                1
                              </li>  
                            </ul>
                          </td>
                          <td><span class="badge bg-label-primary me-1"><%= shows[i].mode %></span></td>
                          <td>
                            <div class="dropdown" style="position: absolute;bottom: 0.7rem;">
                              <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                              </button>
                              <div class="dropdown-menu">
                                <a class="dropdown-item" href="tv-shows/edit-show/<%= shows[i].id %>"
                                  ><i class="bx bx-edit-alt me-1"></i> Edit</a
                                >
                                <a class="dropdown-item" href="tv-shows/delete-show"
                                  ><i class="bx bx-trash me-1"></i> Delete</a
                                >
                              </div>
                            </div>
                          </td>
                        </tr> 
                       <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
              <!--/ Hoverable Table rows -->
            </div>
            <!-- / Content -->

            <!-- Footer -->
<%- include('footer') %>
