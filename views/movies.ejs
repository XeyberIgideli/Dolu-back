            <!-- Action -->
            <% for( let i = 0; i < genreSet.length; i++ ) { %>
                <div class="content-1 swiper">
                    <div class="heading">
                        <h3 class="heading-title"><%=  genreSet[i].charAt(0).toUpperCase() + genreSet[i].slice(1) %></h3>
                    </div> 
                    <!-- Additional required wrapper -->
                    <div class="swiper-wrapper">
                        <!-- Slides -->
        
                        <% for( let k = 0; k < movies.length; k++ ) { %>
