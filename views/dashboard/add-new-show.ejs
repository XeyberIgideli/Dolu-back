<%- include('partials/header') %>
        <!-- Menu -->

        <%- include('partials/sidebar') %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <%- include('partials/navbar') %>
         
          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Shows/</span> Add New Show</h4>

            <!-- Basic Layout & Basic with Icons -->
            <div class="row">
              <!-- Basic Layout -->
              <div class="col-xxl">
                <div class="card mb-4">
                  <div class="card-header d-flex align-items-center justify-content-between">
                    <!-- <h5 class="mb-0">Basic Layout</h5>
                    <small class="text-muted float-end">Default label</small> -->
                  </div>
                  <div class="card-body">
                    <form id="myForm" action="add-show" method="POST" enctype="multipart/form-data"> 
                      <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Landscape image</label>
                            <div class="col-sm-10">
                                <input type="file" name="landscapeImage" class="form-control" id="inputGroupFile02" />
                            </div>
                      </div>  

                      <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Portrait image</label>
                            <div class="col-sm-10">
                                <input type="file" name="portraitImage" class="form-control" id="inputGroupFile02" />
                            </div>
                      </div>
                       
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Title</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" name="title"  id="basic-default-name" placeholder="John Doe" />
                        </div>
                      </div>
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-company">Description</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                      </div>
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-email">Sub Title</label>
                        <div class="col-sm-10">
                          <div class="input-group input-group-merge">
                            <input
                              type="text"
                              id="basic-default-email"
                              name="subTitle"
                              class="form-control"
                              placeholder="john.doe"
                              aria-label="john.doe"
                              aria-describedby="basic-default-email2"
                            />
                            <span class="input-group-text" id="basic-default-email2">optional</span>
                          </div> 
                        </div>
                      </div> 

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Duration</label>
                        <div class="col-sm-10">
                          <input type="text" name="duration" class="form-control" id="basic-default-name" placeholder="John Doe" />
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Production</label>
                        <div class="col-sm-10 col-wrapper" id="production">
                          <div style="display: flex; flex-direction: row; gap: 1rem;" class="embed-wrapper">
                            <input type="text" name="production" class="form-control" id="basic-default-name" />
                            <button type="button" class="btn btn-primary add-input">+</button>
                          </div>                          
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Genres</label>
                        <div class="col-sm-10">
                            <div class="tag-wrapper">
                                <div class="tag-container">
                                    <input type="text" name="genres[]"/>
                                </div>
                            
                                <div class="icons">
                                    <i class="bx bx-copy" id="copy"></i>
                                    <i class="bx bx-window-close" id="removeAll"></i>
                                </div>
                            </div>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Director</label>
                        <div class="col-sm-10">
                          <input type="text" name="director" class="form-control" id="basic-default-name" placeholder="John Doe" />
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Release Date</label>
                        <div class="col-sm-10">
                          <input class="form-control" name="releaseDate" type="date" id="html5-date-input">
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Release Country</label>
                        <div class="col-sm-10">
                          <input type="text" name="releaseCountry" class="form-control" id="basic-default-name" placeholder="John Doe" />
                        </div>
                      </div>
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Season</label>
                        <div class="col-sm-10">
                          <input type="text" name="season" class="form-control" id="basic-default-name" placeholder="John Doe" />
                        </div>
                      </div>
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Rating</label>
                        <div class="col-sm-10">
                          <input type="text" name="rating" class="form-control" id="basic-default-name" placeholder="John Doe" />
                        </div>
                      </div> 
                      
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Embed</label>
                        <div class="col-sm-10 col-wrapper" id="embed">
                          <div style="display: flex; flex-direction: row; gap: 1rem;" class="embed-wrapper">
                            <input type="text" name="embed" class="form-control" id="basic-default-name" />
                           <button type="button" class="btn btn-primary add-input">+</button>
                          </div>                          
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Guidance Rate</label>
                        <div class="col-sm-10">
                          <input type="text" name="guidance" class="form-control" id="basic-default-name" placeholder="John Doe" />
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Language</label>
                        <div class="col-sm-10">
                          <input type="text" name="language" class="form-control" id="basic-default-name" placeholder="John Doe" />
                        </div>
                      </div>
                      

                      <!-- <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Trailer</label>
                        <div class="col-sm-10 col-wrapper" id="trailer">
                          <div style="display: flex; flex-direction: row; gap: 1rem;" class="embed-wrapper">
                            <input type="text" name="trailer" class="form-control" id="basic-default-name" />
                            <button type="button" class="btn btn-primary add-input">+</button>
                          </div>                          
                        </div>
                      </div> -->

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Mode</label>
                        <div class="col-sm-10">
                          <select id="defaultSelect" name="mode" class="form-select">
                            <option>None</option>
                            <option>Featured</option>
                            <option>Popular</option>
                          </select>
                        </div>
                      </div>

                      <div class="row justify-content-end">
                        <div class="col-sm-10">
                          <button type="submit" id="send" class="btn btn-primary">Send</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              
            </div>
          </div>
          <!-- / Content -->

            <!-- Footer -->
<%- include('partials/footer') %>
