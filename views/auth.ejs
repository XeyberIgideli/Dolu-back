<div class="loaderWrapper">
  <h2 class="loader-logo center">Dolu</h2>
  <div id="loader" class="center"></div>
</div>
<body class="loading"> 
  <div class="background"></div>

    <div class="auth-container">
      <h2 class="auth-page-title">Ready to watch?!</h2> 
        <div class="tab-wrapper">
         <div class="tab">
          <button class="tablinks active" onclick="openForm(event, 'login')">Login</button>
          <button class="tablinks" onclick="openForm(event, 'register')">Register</button>
        </div>
        
        <div id="login" class="tabcontent">
          <h2>Login</h2>
          <form action="auth/login" id="loginForm" method="POST">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" value="test">
            
            <label for="password">Password</label>
            <input type="password" id="password" name="password" value="12345">
            
            <button type="submit">Login</button>
          </form>
        </div>
        
        <div id="register" class="tabcontent">
          <h2>Register</h2>
          <form action="auth/register" method="POST">
            <% if (flashMessages) { %>
              <% if (flashMessages.error) { %>
                <p class="errorMsg"><%= flashMessages.error %></p>
              <% } %>
            <% } %>
            <label for="username">Username</label>
            <input type="text" id="username" name="username" >
            
            <label for="email">Email</label>
            <input type="email" id="email" name="email" >
            
            <label for="password">Password</label>
            <input type="password" id="password" name="password" >
            
            <button type="submit">Register</button>
          </form>
        </div> 
        </div>
        
        <div class="companies">
          <img src="img/companies/netflix.png" alt="">
          <img src="img/companies/hbo.png" alt="">
          <img src="img/companies/disney.png" alt="">
          <img src="img/companies/hbomax.png" alt="">
          <img src="img/companies/pixar.png" alt="">
        </div>
        
      </div>
      
</body>

