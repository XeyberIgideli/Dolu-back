<%- include('header') %>
        <!-- Menu -->

        <%- include('sidebar') %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <%- include('navbar') %>
         
          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Shows/</span> Add New Episode - <%= episodeData.title %></h4>

            <!-- Basic Layout & Basic with Icons -->
            <div class="row">
              <!-- Basic Layout -->
              <div class="col-xxl">
                <div class="card mb-4">
                  <div class="card-header d-flex align-items-center justify-content-between">
                    <!-- <h5 class="mb-0">Basic Layout</h5>
                    <small class="text-muted float-end">Default label</small> -->
                  </div>
                  <div class="card-body">
                    <form id="myForm" action="episode-editted" method="POST" enctype="multipart/form-data"> 
                      <input type="hidden" name="showID" value="<%= episodeData.show.id %>" readonly>
                      <input type="hidden" name="episodeID" value="<%= episodeData.id %>" readonly>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Thumbnail</label>
                        <div class="col-sm-10">
                            <input type="file" name="thumbnail" class="form-control" id="inputGroupFile02" />
                            <div id="defaultFormControlHelp" class="form-text">
                              <%= episodeData.thumbnail.split('/')[4] %>
                            </div>
                        </div>
                       </div>  

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Title</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" name="title" id="basic-default-name" value="<%= episodeData.title %>" />
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-company">Season</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" name="season" id="basic-default-name" value="<%= episodeData.season %>" />
                        </div>
                      </div> 

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-company">Episode</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" name="episode" id="basic-default-name" value="<%= episodeData.episode %>" />
                        </div>
                      </div>  
                      
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Embed</label>
                        <div class="col-sm-10 col-wrapper" id="embed" style="display: flex; flex-direction: column;">
                          <button type="button" style="margin-top: 5px;" class="btn btn-primary add-input">+</button>
                          <% for( let k = 0; k < episodeData.embed.length; k++ ) { %>
                          <div style="display: flex; flex-direction: row; gap: 1rem;" class="embed-wrapper">
                              <input type="text" style="margin-top: 5px;" value="<%= episodeData.embed[k] %>" name="embed" class="form-control" id="basic-default-name" />
                              <button type="button" style="margin-top: 5px;" class="btn btn-danger remove-input">-</button>
                            </div>                          
                          <% } %>
                        </div>
                      </div>
                       
                      <div class="row justify-content-end">
                        <div class="col-sm-10">
                          <button type="submit" id="send" class="btn btn-primary">Send</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              
            </div>
          </div>
          <!-- / Content -->

            <!-- Footer -->
<%- include('footer') %>
