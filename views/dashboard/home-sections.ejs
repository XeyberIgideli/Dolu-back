<%- include('partials/header') %>
        <!-- Menu -->

        <%- include('partials/sidebar') %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <%- include('partials/navbar') %>
         
          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content --> 
            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Home Sections</span></h4>
              <!-- Hoverable Table rows -->
              <div class="card">
                <div style="padding: 2rem">
                    <form action="home-sections/saveSections" method="POST">
                        <div class="form-check form-switch mb-2">
                            <input class="form-check-input" type="checkbox" name="showsByCategoriesSection" id="flexSwitchCheckChecked" <%= interfacedata.showsByCategoriesSection === 'on' ? 'checked' : '' %>>
                            <label class="form-check-label" for="flexSwitchCheckChecked">"Shows by categories" section</label>
                          </div>
                          <div class="form-check form-switch mb-2">
                            <input class="form-check-input" type="checkbox" name="featuredMoviesSection" id="flexSwitchCheckChecked2" <%= interfacedata.featuredMoviesSection === 'on' ? 'checked' : '' %>>
                            <label class="form-check-label" for="flexSwitchCheckChecked2">"Featured movies" section</label>
                          </div>
                          <div class="form-check form-switch mb-2">
                            <input class="form-check-input" type="checkbox" name="bookmarksSection" id="flexSwitchCheckChecked3" <%= interfacedata.bookmarksSection === 'on' ? 'checked' : '' %>>
                            <label class="form-check-label" for="flexSwitchCheckChecked3">"Bookmarks" section</label>
                          </div>
                          <div class="form-check form-switch mb-2">
                            <input class="form-check-input" type="checkbox" name="topThreeOfDaySection" id="flexSwitchCheckChecked4" <%= interfacedata.topThreeOfDaySection === 'on' ? 'checked' : '' %>>
                            <label class="form-check-label" for="flexSwitchCheckChecked4">"Top three of the day" section</label>
                          </div>
                          <input type="submit" class="btn btn-primary" value="Save">
                    </form>
                </div> 
              </div>
              <!--/ Hoverable Table rows -->
            </div>
            <!-- / Content -->

            <!-- Footer -->
<%- include('partials/footer') %>
