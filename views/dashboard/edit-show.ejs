<%- include('partials/header') %>
        <!-- Menu -->

        <%- include('partials/sidebar') %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <%- include('partials/navbar') %>
         
          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">TV Shows/</span> Edit Show</h4>

            <!-- Basic Layout & Basic with Icons -->
            <div class="row">
              <!-- Basic Layout -->
              <div class="col-xxl">
                <div class="card mb-4">
                  <div class="card-header d-flex align-items-center justify-content-between">
                    <!-- <h5 class="mb-0">Basic Layout</h5>
                    <small class="text-muted float-end">Default label</small> -->
                  </div>
                  <div class="card-body">
                    <form id="myForm" action="../show-editted" method="POST" enctype="multipart/form-data"> 
                      
                      <input type="hidden" name="showID" value="<%= show.id %>" />

                      <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Landscape image</label>
                            <div class="col-sm-10">
                                <input type="file" name="landscapeImage" class="form-control landscapeImage" id="inputGroupFile02" />
                                <input value="<%= show.landscapeImage %>" class="hiddenLandscape"  type="hidden" name="hiddenLandscape" readonly>
                            </div>
                      </div>  

                      <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Portrait image</label>
                            <div class="col-sm-10">
                                <input type="hidden" value="<%= show.portraitImage %>" name="hiddenPortrait" readonly>
                                <input type="file"  name="portraitImage" class="form-control" id="inputGroupFile02" />
                            </div>
                      </div>
                       
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Title</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" name="title"  id="basic-default-name" value="<%= show.title %>" />
                        </div>
                      </div>
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-company">Description</label>
                        <div class="col-sm-10">
                            <textarea class="form-control"  name="description" id="exampleFormControlTextarea1" rows="3"><%= show.description %></textarea>
                        </div>
                      </div>
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-email">Sub Title</label>
                        <div class="col-sm-10">
                          <div class="input-group input-group-merge">
                            <input
                              type="text"
                              id="basic-default-email"
                              name="subTitle"
                              class="form-control"
                              value="<%= show.subTitle %>"
                              aria-label="john.doe"
                              aria-describedby="basic-default-email2"
                            />
                            <span class="input-group-text" id="basic-default-email2">optional</span>
                          </div> 
                        </div>
                      </div> 
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Duration</label>
                        <div class="col-sm-10">
                          <input type="text" name="duration" class="form-control" id="basic-default-name" value="<%= show.duration %>" />
                        </div>
                      </div>
                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Release Country</label>
                        <div class="col-sm-10">
                          <input type="text" name="releaseCountry" class="form-control" id="basic-default-name" value="<%= show.releaseCountry %>" />
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Production</label>
                        <div class="col-sm-10 col-wrapper" id="production" style="display: flex; flex-direction: column;">
                          <div>
                            <button type="button" style="margin-top: 5px;width: 100%;" class="btn btn-primary add-input">+</button>
                          </div>
                          <% for( let k = 0; k < show.production.length; k++ ) { %>
                          <div style="display: flex; flex-direction: row; gap: 1rem;" class="embed-wrapper">
                              <input type="text" style="margin-top: 5px;" value="<%= show.production[k] %>" name="production" class="form-control" id="basic-default-name" />
                              <button type="button" style="margin-top: 5px;" class="btn btn-danger remove-input">-</button>
                            </div>                          
                          <% } %>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Genres</label>
                        <div class="col-sm-10">
                            <div class="tag-wrapper">
                                <div class="tag-container">
                                    <input type="text" name="genres[]" value="<%= show.genres %>"/>
                                </div>
                            
                                <div class="icons">
                                    <i class="bx bx-copy" id="copy"></i>
                                    <i class="bx bx-window-close" id="removeAll"></i>
                                </div>
                            </div>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Director</label>
                        <div class="col-sm-10">
                          <input type="text" name="director" class="form-control" id="basic-default-name" value="<%= show.director %>" />
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Release Date</label>
                        <div class="col-sm-10">
                          <input class="form-control" name="releaseDate" value="<%= show.releaseDate %> type="date" id="html5-date-input">
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Rating</label>
                        <div class="col-sm-10">
                          <input type="text" name="rating" class="form-control" id="basic-default-name" value="<%= show.rating %>" />
                        </div>
                      </div> 

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Embed</label>
                        <div class="col-sm-10 col-wrapper" id="embed" style="display: flex; flex-direction: column;">
                          <div>
                            <button type="button" style="margin-top: 5px;width: 100%;" class="btn btn-primary add-input">+</button>
                          </div>
                          <% for( let k = 0; k < show.embed.length; k++ ) { %>
                          <div style="display: flex; flex-direction: row; gap: 1rem;" class="embed-wrapper">
                              <input type="text" style="margin-top: 5px;" value="<%= show.embed[k] %>" name="embed" class="form-control" id="basic-default-name" />
                              <button type="button" style="margin-top: 5px;" class="btn btn-danger remove-input">-</button>
                            </div>                          
                          <% } %>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Guidance Rate</label>
                        <div class="col-sm-10">
                          <input type="text" name="guidance" class="form-control" id="basic-default-name" value="<%= show.guidance %>" />
                        </div>
                      </div>

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Language</label>
                        <div class="col-sm-10">
                          <input type="text" name="language" class="form-control" id="basic-default-name" value="<%= show.language %>" />
                        </div>
                      </div>

                      <!-- <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Trailer</label>
                        <div class="col-sm-10 col-wrapper" style="display: flex; flex-direction: column;">
                          <button type="button" style="margin-top: 5px;" class="btn btn-primary add-input">+</button>
                          <% // for( let k = 0; k < show.trailer.length; k++ ) { %>
                          <div style="display: flex; flex-direction: row; gap: 1rem;" class="embed-wrapper">
                              <input type="text" style="margin-top: 5px;" value="<%= //show.trailer[k] %>" name="trailer" class="form-control" id="basic-default-name" />
                              <button type="button" style="margin-top: 5px;" class="btn btn-danger remove-input">-</button>
                            </div>                          
                          <% //} %>
                        </div>
                      </div> -->

                      <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Mode</label>
                        <div class="col-sm-10">
                          <select id="defaultSelect" name="mode" class="form-select">
                            <option <%= show.mode === 'None' ? 'selected' : null %> >None</option>
                            <option <%= show.mode === 'Featured' ? 'selected' : null %>>Featured</option>
                            <option <%= show.mode === 'Popular' ? 'selected' : null %>>Popular</option>
                          </select>
                        </div>
                      </div>

                      <div class="row justify-content-end">
                        <div class="col-sm-10">
                          <button type="submit" id="edit" class="btn btn-primary">Edit</button>
                        </div>
                      </div>

                    </form>
                  </div>
                </div>
              </div>
              
            </div>
          </div>
          <!-- / Content -->

            <!-- Footer -->
<%- include('partials/footer') %>
